---
import "@fontsource-variable/oswald";
import Nav from "../components/Nav";
import Footer from "../components/Footer";

interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Method Barcelona jiu jitsu & grappling" />
    <meta
      name="title"
      content="Method Barcelona | Brazilian Jiu-Jitsu & Grappling"
    />
    <meta
      property="og:title"
      content="Method Barcelona | Brazilian Jiu-Jitsu & Grappling"
    />
    <meta
      property="og:description"
      content="Join Method Barcelona for Brazilian Jiu-Jitsu and Grappling classes. Expert coaches, programs for all levels, and a strong community."
    />
    <meta
      name="keywords"
      content="Brazilian Jiu-Jitsu, BJJ, Grappling, Method Barcelona, Martial Arts, BJJ Classes, Grappling Classes"
    />
    <meta name="author" content="Method Barcelona" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Nav client:load />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
<style is:global>
  html {
    font-family: "Oswald", sans-serif;
    background: #1b1b1b;
    background-size: 224px;
  }
  code {
    font-family:
      Oswald,
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
  .container_mouse {
    text-align: center;
    color: gray;
    font-weight: bold;
    text-transform: uppercase;
    padding-top: 2rem;
    cursor: pointer;
    position: absolute;
    bottom: 5px;
    left: 50%;
    transform: translateX(-50%); /* Centers it horizontally */
  }

  .container_mouse .mouse-btn {
    margin: 10px auto;
    width: 40px;
    height: 70px;
    border: 4px solid gray;
    border-radius: 30px;
    display: flex;
  }

  .container_mouse .mouse-btn .mouse-scroll {
    display: block;
    width: 15px;
    height: 15px;
    background: linear-gradient(170deg, #a0a0a0, #6e6e6e);
    border-radius: 50%;
    margin: auto;
    animation: scrolling 1s linear infinite;
  }

  @keyframes scrolling {
    0% {
      opacity: 0;
      transform: translateY(-20px);
    }

    100% {
      opacity: 1;
      transform: translateY(20px);
    }
  }
  .parallax {
    overflow: hidden;
    white-space: nowrap;
    background-color: white;
    letter-spacing: -2px;
    line-height: 0.8;
    margin: 0;
    white-space: nowrap;
  }

  .scroller {
    display: inline-flex;
    gap: 3rem; /* space between repeated spans */
    font-size: 6.5rem; /* adjust to taste */
    font-weight: 900;
    will-change: transform; /* optimization */
  }
</style>
